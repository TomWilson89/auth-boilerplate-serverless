{
  "compilerOptions": {
    "alwaysStrict": true,
    "sourceMap": true,
    "removeComments": true,
    "target": "es2017",
    "module": "commonjs",
    "lib": ["es2017", "esnext.asynciterable", "es2020.string"],
    "resolveJsonModule": true,
    "typeRoots": ["src/typings", "node_modules/@types"],
    "outDir": "./dist"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
